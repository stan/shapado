-content_for :subtabs do
  .navtitle
    = t(".title", :default => :"moderate.questions.index.title")
    -if @questions
      == (#{@questions.total_entries})

  =render :partial => "subtabs"

%p
  = t(".filters")
  = link_to t(".unbanned"), flagged_moderate_questions_path, :title => t(".unbanned_tooltip")
  |
  = link_to t(".banned"), flagged_moderate_questions_path(:filter => "banned"), :title => t(".unbanned_tooltip")

-form_tag manage_moderate_questions_path do
  %table.table
    %tr
      %th
      %th
        =t(:flags, :scope => "activerecord.models")
      %th
        =t(:title, :scope => "activerecord.attributes.question")
      %th
        =t(:banned, :scope => "activerecord.attributes.question")
      %th
        =t(:body, :scope => "activerecord.attributes.question")
    -@questions.each do |question|
      %tr
        %th
          = check_box_tag "question_ids[]", question.id
        %td
          = render :partial => "flags/list", :locals=> {:flaggeable => question}
        %td
          = link_to h(question.title), question_path(question)
        %td
          &= question.banned
        %td
          = truncate(h(question.body), :length => 100)
  = will_paginate @questions, :param_name => "questions_page"
  = submit_tag "ban"
  = t("global.or")
  = submit_tag "unban"
