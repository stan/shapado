-content_for :subtabs do
  .navtitle
    = t(".title", :default => :"moderate.questions.index.title")
    -if @questions
      == (#{@questions.total_entries})

  =render :partial => "subtabs"

-form_tag manage_moderate_questions_path do
  %table.table
    %tr
      %th
      %th
        =t(:prural_name, :scope => "close_requests.model")
      %th
        =t(:title, :scope => "activerecord.attributes.question")
      %th
        =t(:closed, :scope => "activerecord.attributes.question")
      %th
        =t(:body, :scope => "activerecord.attributes.question")
    -@questions.each do |question|
      %tr
        %th
          = check_box_tag "question_ids[]", question.id
        %td
          = render :partial => "close_requests/list", :locals=> {:question => question}
        %td
          = link_to h(question.title), question_path(question)
        %td
          &= question.closed
        %td
          = truncate(h(question.body), :length => 100)
  = will_paginate @questions, :param_name => "questions_page"
  = submit_tag "ban"
  = t("global.or")
  = submit_tag "unban"
